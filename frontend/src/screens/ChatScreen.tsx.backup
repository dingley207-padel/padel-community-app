  },
  emptySubtext: {
    ...TextStyles.body,
    color: Colors.textSecondary,
    marginTop: Spacing.xs,
    textAlign: 'center',
  },
  conversationItem: {
    flexDirection: 'row',
    padding: Spacing.md,
